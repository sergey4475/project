/*#QTabBar*/
QTabBar::tab {
/*    background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                  stop: 0 #a0a0a0, stop: 0.4 #BBBBBB,
                                  stop: 0.5 #B8B8B8, stop: 1.0 #D3D3D3);*/
    background-color: qlineargradient(spread:pad, x1:0.448727, y1:0.102, x2:0.466, y2:0.960455, stop:0 rgba(155, 155, 155, 255), stop:1 rgba(232, 232, 230, 255));
    border: 1px solid #C4C4C3;
    border-bottom-color: #C2C7CB; /* same as the pane color */
    min-width:100px;
    padding: 5px;
    border-radius: 5px;
}

QTabBar::tab:selected, QTabBar::tab:hover {
background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                     stop: 0 #fafafa, stop: 0.4 #f4f4f4,
                                 stop: 0.5 #e7e7e7, stop: 1.0 #fafafa);
}

QTabBar::tab:selected {
    border-color: #9B9B9B;
    border-bottom-color: #C2C7CB; /* same as pane color */
}

QTabBar::tab:!selected {
    margin-top: 2px; /* make non-selected tabs look smaller */
}

QTabBar{
     border-radius: 5px;
     background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                  stop: 0 #E1E1E1, stop: 0.4 #DDDDDD,
                                  stop: 0.5 #D8D8D8, stop: 1.0 #D3D3D3);
}

QTabBar QTabBar{
     border-radius: 0px;
     background: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1,
                                  stop: 0 #E1E1E1, stop: 0.4 #DDDDDD,
                                  stop: 0.5 #D8D8D8, stop: 1.0 #D3D3D3);
}

QTabBar QTabBar::tab {
    background-color: #C4C4C3;
    border: 1px solid #C4C4C3;
    border-bottom-color: #C2C7CB; /* same as the pane color */
    border-radius: 0px;
}




/* QToolBox */
QToolBox::tab {
    background-color: qlineargradient(spread:pad, x1:0.448727, y1:0.102, x2:0.466, y2:0.960455, stop:0 rgba(155, 155, 155, 255), stop:1 rgba(232, 232, 230, 255));
    border: 1px solid #C4C4C3;
    border-bottom-color: #C2C7CB; /* same as the pane color */
    border-radius: 5px;
}

QToolBox::tab:selected { /* italicize selected tabs */
    font: italic bold;
    color: #000;
}


